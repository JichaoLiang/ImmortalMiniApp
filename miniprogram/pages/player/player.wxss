/* pages/player/player.wxss */

.button-3 {
  background-color: rgba(33, 150, 243, 0.8);
  color: white;
  box-shadow: 2px 2px 4px rgba(0, 0, 0, 0.1);
  transform: skew(-5deg);
  border-radius: 8px;
}

.button {
  padding: 10px 20px;
  font-size: 16px;
  border: none;
  border-radius: 5px;
  cursor: pointer;
  transition: transform 0.3s ease, background-color 0.3s ease;
}
.button-3:hover {
  background-color: rgba(30, 136, 229, 0.9);
  transform: skew(-5deg) scale(1.05);
}

.div_top_bar {
  display: none;
  position: absolute;
  line-height: 24px;
  display: block;
  background: #ffffff;
  padding: 5px 11px;
  border-radius: 8px;
  -moz-transition: all 0.5s;
  -webkit-transition: all 0.5s;
  -o-transition: all 0.5s;
  transition: all 0.5s;
  color: #000000;
  text-decoration: none;
  text-align: center;
  opacity: 0.8;
  font-size: larger;
  z-index:99999;
  width:90%;
  margin: 10px 5px 0 0;
  top:650rpx;
  left:15rpx;
}

.div_cover_box {
  display:none;
  position: absolute;
  background-color:#ffffff;
  z-index:9990;
  left:0rpx;
  top:0rpx;
  width:100%;
  height:1500rpx;
}

.div_bg_img_cover_box {
  display:none;
  position: absolute;
  opacity: 0.8;
  z-index:9999;
  left:0rpx;
  top:0rpx;
  width:100%;
  height:1500rpx;
}
