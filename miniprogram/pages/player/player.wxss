/* pages/player/player.wxss */

.button-3 {
  background-color: rgba(33, 150, 243, 0.8);
  color: white;
  box-shadow: 2px 2px 4px rgba(0, 0, 0, 0.1);
  transform: skew(-5deg);
  border-radius: 8px;
}

.button {
  padding: 10px 20px;
  font-size: 16px;
  border: none;
  border-radius: 5px;
  cursor: pointer;
  transition: transform 0.3s ease, background-color 0.3s ease;
}
.button-3:hover {
  background-color: rgba(30, 136, 229, 0.9);
  transform: skew(-5deg) scale(1.05);
}

.div_top_bar {
  display: none;
  position: absolute;
  line-height: 24px;
  display: block;
  overflow: scroll;
  overflow-wrap:break-word;
  word-break:break-all;
  white-space: normal;
  background: #ffffff;
  padding: 5px 11px 5px 11px;
  border-radius: 8px;
  -moz-transition: all 0.5s;
  -webkit-transition: all 0.5s;
  -o-transition: all 0.5s;
  transition: all 0.5s;
  color: #000000;
  text-decoration: none;
  text-align:center;
  opacity: 0.8;
  font-size: larger;
  z-index:99999;
  margin: 10px 5px 0 0;
  width:90%;
  top:650rpx;
  left:15rpx;
}

.div_cover_box {
  display:none;
  position: absolute;
  background-color:#ffffff;
  z-index:9990;
  left:0rpx;
  top:0rpx;
  width:100%;
  height:1500rpx;
}

.div_bg_img_cover_box {
  display:none;
  position: absolute;
  opacity: 0.8;
  z-index:9999;
  left:0rpx;
  top:0rpx;
  width:100%;
  height:1500rpx;
}


/* 评论弹框样式 */
.comment-modal {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  z-index: 99;
  display: flex;
  flex-direction: column;
  justify-content: flex-end;
}

.modal-content {
  background-color: #fff;
  border-radius: 16rpx 16rpx 0 0;
  padding: 30rpx 30rpx 60rpx 30rpx;
  z-index: 98;
  box-shadow: 0 -2rpx 10rpx rgba(0, 0, 0, 0.1);
}

.dummy-text{
  background-color: unset;
  font-size: 25rpx;
  font-weight:normal;
  min-width: 0rpx;
  padding: 0rpx;
  align-items:flex-start;
}

.modal-mask {
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background-color: rgba(0, 0, 0, 0.5);
}

.modal-content {
  background-color: #fff;
  border-radius: 16rpx 16rpx 0 0;
  padding: 20rpx 30rpx;
  z-index: 1000;
  box-shadow: 0 -2rpx 10rpx rgba(0, 0, 0, 0.1);
}

.modal-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 20rpx 0;
}

.title {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
}

.cancel-btn {
  font-size: 28rpx;
  color: #999;
}

.input-area {
  margin: 20rpx 0;
}

.comment-input {
  width: 100%;
  height: 285rpx;
  padding: 20rpx;
  background-color: #f5f5f5;
  border-radius: 8rpx;
  font-size: 28rpx;
  color: #333;
}

.placeholder {
  color: #ccc;
}

.modal-footer {
  margin: 20rpx 0;
}

.send-btn {
  width: 100%;
  height: 80rpx;
  line-height: 80rpx;
  background-color: #07c160;
  color: #fff;
  border-radius: 8rpx;
  font-size: 30rpx;
}

.send-btn[disabled] {
  background-color: #a0e8c3;
  color: #fff;
  opacity: 0.7;
}

.fixedbutton{
  display: flex;
  float: left;
  padding: 10rpx;
  margin-left: 20rpx;
  font-size: 20rpx;
}

.fixedbutton image{
  width:60rpx;
  height:60rpx;
  float: left;
}

.fixedbutton button{
  width:60rpx;
  height:60rpx;
  float: left;
}

.fixedbutton text{
  width:30rpx;
  padding-top:20rpx;
}


.capsule-btn {
  padding: 0 10rpx;
  height: 64rpx;
  line-height: 64rpx;
  font-size: 28rpx;
  color: #ffffff;
  background-color: #1989fa; /* 蓝色 */
  border-radius: 32rpx;
  display: inline-block;
  margin:0rpx 0rpx;
  width: 30rpx;
}

.capsule-btn:active {
  background-color: #1578e0;
}

.capsule-btn[disabled] {
  background-color: #a0e8c3;
  color: #fff;
  opacity: 0.7;
}

/* 弹窗的body */
.comment-body {
  display: flex;
}
.divider {
  width: 1rpx;
  height: 320rpx;
  background-color: #eee;
  margin: 0 20rpx;
  align-self: center;
}

.comment-image {
  width: 100%;
  height: 100%;
  display: block;
  background-color: #f5f5f5;
}

/* 图片容器 */
.image-container {
  width:180rpx;
  height: 320rpx; /* 与分隔线高度一致 */
  flex-shrink: 0;
  border-radius: 8rpx;
  overflow: hidden;
}