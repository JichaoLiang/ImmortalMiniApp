/* pages/product/product.wxss */
.active {
  color:rgb(13, 105, 224);
  font-weight:900;
  border-bottom-color: rgb(187, 233, 210);
}


.fixedbutton{
  float: left;
  padding: 10rpx;
  margin-left: 40rpx;
  font-size: 30rpx;
}

.fixedbutton image{
  width:80rpx;
  height:80rpx;
  float: left;
}

.fixedbutton text{
  float: left;
  width:30rpx;
  padding-top:20rpx;
}

.grid-container{
  display: flex;
  flex-wrap: wrap;
  margin: 16rpx;
  justify-content: space-between;
}

.grid-item{
  display:flex;
  width: 49%;
  flex-direction: column;
  box-sizing:  border-box;
  margin-top: 16rpx;
}

.grid-item > image {
  width: 100%;
  border-radius:  10rpx 10rpx 0 0;
}


/* tab部分 */
/* Tab栏样式 */
.tabs {
  display: flex;
  height: 88rpx;
  width: 100%;
  background-color: #fff;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.05);
  position: relative;
  z-index: 10;
  margin: 20rpx;
}

.tab-item {
  flex: 1;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  font-size: 30rpx;
  color: #666;
  position: relative;
  padding: 0 10rpx;
}

.tab-item text {
  transition: all 0.3s ease;
}

.tab-item.active text {
  color: #333;
  font-weight: 500;
}

.tab-indicator {
  width: 40rpx;
  height: 4rpx;
  background-color: transparent;
  margin-top: 10rpx;
  transition: all 0.3s ease;
}

.tab-item.active .tab-indicator {
  background-color: #07C160; /* 微信绿色作为激活色 */
}
.content {
  padding: 30rpx;
}

.content-title {
  font-size: 36rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 30rpx;
}

.content-body {
  font-size: 28rpx;
  color: #666;
  line-height: 1.6;
}
.secondary-btn {
  width: 100%;
  height: 88rpx;
  line-height: 88rpx;
  text-align: center;
  font-size: 32rpx;
  color: #07c160; /* 与主按钮同色系 */
  background-color: transparent;
  border: 2rpx solid #07c160;
  border-radius: 44rpx;
  margin: 20rpx 0;
  transition: all 0.3s;
}

.capsule-btn {
  padding: 0 40rpx;
  height: 64rpx;
  line-height: 64rpx;
  font-size: 28rpx;
  color: #ffffff;
  background-color: #1989fa; /* 蓝色 */
  border-radius: 32rpx;
  display: inline-block;
}

.capsule-btn:active {
  background-color: #1578e0;
}

.capsule-btn[disabled] {
  background-color: #a0e8c3;
  color: #fff;
  opacity: 0.7;
}

/* 评论容器 */
.comment-container {
  padding: 20rpx;
  background-color: #f7f7f7;
}

/* 评论卡片 */
.comment-card {
  background-color: #fff;
  border-radius: 12rpx;
  padding: 24rpx;
  margin-bottom: 24rpx;
  box-shadow: 0 2rpx 12rpx rgba(0, 0, 0, 0.05);
}

/* 用户信息 */
.user-info {
  display: flex;
  align-items: center;
  margin-bottom: 20rpx;
}

.avatar {
  width: 80rpx;
  height: 80rpx;
  border-radius: 50%;
  margin-right: 20rpx;
}

.user-meta {
  display: flex;
  flex-direction: column;
}

.username {
  font-size: 28rpx;
  font-weight: 500;
  color: #333;
}

.time {
  font-size: 22rpx;
  color: #999;
  margin-top: 6rpx;
}

/* 评论内容 */
.comment-content {
  flex: 1;
  font-size: 26rpx;
  color: #333;
  line-height: 1.6;
  padding-right: 0; /* 移除原有右padding */
  align-self: center;
}

/* 图片容器 */
.image-container {
  width:180rpx;
  height: 320rpx; /* 与分隔线高度一致 */
  flex-shrink: 0;
  border-radius: 8rpx;
  overflow: hidden;
}
.comment-body {
  display: flex;
}
.divider {
  width: 1rpx;
  height: 160rpx;
  background-color: #eee;
  margin: 0 20rpx;
  align-self: center;
}

.comment-image {
  width: 100%;
  height: 100%;
  display: block;
  background-color: #f5f5f5;
}

/* 操作栏 */
.action-bar {
  display: flex;
  border-top: 1rpx solid #f0f0f0;
  padding-top: 20rpx;
}

.action-item {
  display: flex;
  align-items: center;
  margin-right: 40rpx;
  color: #666;
  font-size: 24rpx;
}

.action-icon {
  width: 42rpx;
  height: 42rpx;
  margin-right: 10rpx;
}

/* 评论弹框样式 */
.comment-modal {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  z-index: 999;
  display: flex;
  flex-direction: column;
  justify-content: flex-end;
}

.modal-mask {
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background-color: rgba(0, 0, 0, 0.5);
}

.modal-content {
  background-color: #fff;
  border-radius: 16rpx 16rpx 0 0;
  padding: 20rpx 30rpx;
  z-index: 1000;
  box-shadow: 0 -2rpx 10rpx rgba(0, 0, 0, 0.1);
}

.modal-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 20rpx 0;
}

.title {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
}

.cancel-btn {
  font-size: 28rpx;
  color: #999;
}

.input-area {
  margin: 20rpx 0;
}

.comment-input {
  width: 100%;
  min-height: 120rpx;
  max-height: 300rpx;
  padding: 20rpx;
  background-color: #f5f5f5;
  border-radius: 8rpx;
  font-size: 28rpx;
  color: #333;
}

.placeholder {
  color: #ccc;
}

.modal-footer {
  margin: 20rpx 0;
}

.send-btn {
  width: 100%;
  height: 80rpx;
  line-height: 80rpx;
  background-color: #07c160;
  color: #fff;
  border-radius: 8rpx;
  font-size: 30rpx;
}

.send-btn[disabled] {
  background-color: #a0e8c3;
  color: #fff;
  opacity: 0.7;
}

.tag-container{
  margin-top: 100rpx;
  margin-left: 30rpx;
  margin-bottom: 10rpx;
}

.tag-item{
  background-color: rgb(245, 230, 188);
  border-radius: 10rpx;
  width: 180rpx;
  padding: 10rpx;
  text-align: center;
  justify-content: center;
}